  top: -100%;
  transition: all 0.4s;
  z-index: 1;
}

.pizza_item {
  display: flex;
  justify-content: center;
  align-content: center;
  align-items: center;
  flex-wrap: wrap;
  gap: 18px;
  height: 100%;
  font-family: "Open Sans", sans-serif;
  padding: 0 15px;
  color: #e6e6e6;
  opacity: 0.8;
  padding: 5px;
}

.pizza_item i {
  font-size: 2em;
}

.pizza_item:hover {
  opacity: initial;
}

.pizza_link {
  color: #e6e6e6;
  text-align: center;
}

@@media screen and (min-width: 440px) {
  .btn_pizza {
    display: none !important;
  }

  .pizza_list {
    all: initial;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100px;
    font-family: "Open Sans", sans-serif;
    background-color: #c00a27;
  }
}

@@media screen and (min-width: 680px) {
  .phone {
    display: block;
  }
  .navbar {
    padding-top: 1.2em;
  }
}

@@media screen and (min-width: 1000px) {
  .menu {
    all: initial;
    display: flex;
  }
  .login {
    display: inline-block;
    position: relative;
    top: inherit;
    left: inherit;
    width: auto;
    height: auto;
    background: none;
  }

  .btn_menu,
  .btn_login {
    display: none !important;
  }

  .pizza_list {
    justify-content: space-evenly;
  }
}

</style>

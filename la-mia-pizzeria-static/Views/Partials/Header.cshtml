}

/*Seccion de login*/
.login {
  display: flex;
  align-items: center;
  flex-direction: column;
  position: absolute;
  left: 0;
  width: 100vw;
  background: #414141;
  top: -250px;
  transition: all 0.4s;
  z-index: 2;
}

.login_link {
  color: #e6e6e6;
  padding: 0.6em 1.5em;
  font-family: "Open Sans", sans-serif;
  font-size: 0.9em;
  font-weight: bold;
}

.login_link--button {
  padding: 10px 20px;
  background-color: #8ca93e;
  border-radius: 16px;
}

.btn_menu,
.btn_login,
.btn_pizza {
  display: inline-block;
  font-size: 25px;
  color: #fff;
  cursor: pointer;
}


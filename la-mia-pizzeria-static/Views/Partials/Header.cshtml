  transition: all 0.4s;
  z-index: 3;
}

.menu_item {
  padding: 15px 15px;
  font-family: "Open Sans", sans-serif;
  font-size: 0.95em;
  font-weight: bold;
  margin: 0 auto;
  margin-top: 6px;
}

.menu_link {
  color: #e6e6e6;
  font-weight: bold;
}
